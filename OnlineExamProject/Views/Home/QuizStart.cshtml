@model OnlineExamProject.Models.Questions

@{
    Layout =null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
    <title>QuizStart</title>
</head>
<body>

    <h4>Questions</h4>
    <hr />
    <div class="row">
       
        <div class="col-md-4">
            <form asp-action="QuizStart">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <input style="border-bottom-color:burlywood" type="text" value="@Html.DisplayFor(Model=>Model.QText)" />
                    <span asp-validation-for="QText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Opa" class="control-label"></label>
                    <input type="radio" name="as" /> @Html.DisplayFor(Model => Model.Opa)
                    <span asp-validation-for="Opa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Opb" class="control-label"></label>
                    <input type="radio" name="as" /> @Html.DisplayFor(Model => Model.Opb)
                    <span asp-validation-for="Opb" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Opc" class="control-label"></label>
                    <input type="radio" name="as" /> @Html.DisplayFor(Model => Model.Opc)
                    <span asp-validation-for="Opc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Opd" class="control-label"></label>
                    <input type="radio" name="as" /> @Html.DisplayFor(Model => Model.Opd)
                    <span asp-validation-for="Opd" class="text-danger"></span>
                </div>


            </form>
        </div>
        
       
        <div>
            @Html.ActionLink("Next Question", "QuizStart", new { id = Model.QuestionId + 1 })


        </div>

    </div>

    

</body>
</html>





